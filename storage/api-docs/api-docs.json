{
    "openapi": "3.0.0",
    "info": {
        "title": "Mobile App API",
        "version": "1.0"
    },
    "paths": {
        "/api/all-services": {
            "get": {
                "tags": [
                    "Mobile App"
                ],
                "summary": "Get all services",
                "operationId": "27a06bf97bf5a8506fb36e9b6b625d9a",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Service"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Register a new mobile user and issue an OTP for verification.",
                "operationId": "da8643013c2941f5ed7f8a9c9b4a7f7a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RegisterRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User registered. Please verify OTP sent to your phone."
                    },
                    "400": {
                        "description": "Invalid request"
                    }
                }
            }
        },
        "/api/auth/verify-otp": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Verify OTP (One Time Password) for a newly registered mobile user.",
                "operationId": "cf9cf2a20b688a8823802bf1b25c6429",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/VerifyOtpRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Phone number successfully verified or already verified."
                    },
                    "400": {
                        "description": "Invalid request"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login a mobile user and issue an access token.",
                "operationId": "535ffeda4b78916efd658b2844ea897a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Access token issued successfully."
                    },
                    "400": {
                        "description": "Invalid request"
                    }
                }
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout a mobile user and revoke the access token.",
                "operationId": "46f8a14c8083abb69eed72768aa08629",
                "responses": {
                    "200": {
                        "description": "Successfully logged out."
                    }
                }
            }
        },
        "/api/auth/logout-other-devices": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout a mobile user from other devices and revoke the access token.",
                "operationId": "96704989c3f6004989638159b2c8263d",
                "responses": {
                    "200": {
                        "description": "Successfully logged out from other devices."
                    }
                }
            }
        },
        "/api/auth/resend-otp": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Resend OTP to a mobile user.",
                "operationId": "11a9685a977b5eef57a08e0d5a782a34",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ResendOtpRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OTP sent successfully."
                    },
                    "400": {
                        "description": "Invalid request"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "RegisterRequest": {
                "title": "Register Request",
                "description": "Request data for registering a new user",
                "required": [
                    "name",
                    "email",
                    "password",
                    "password_confirmation"
                ],
                "properties": {
                    "phone_number": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "VerifyOtpRequest": {
                "title": "Verify OTP Request",
                "description": "Request data for verifying OTP",
                "required": [
                    "phone_number",
                    "otp_code"
                ],
                "properties": {
                    "phone_number": {
                        "type": "string"
                    },
                    "otp_code": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "title": "Login Request",
                "description": "Request data for logging in a user",
                "required": [
                    "phone_number",
                    "password"
                ],
                "properties": {
                    "phone_number": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Service": {
                "title": "Service",
                "description": "Service data",
                "required": [
                    "name",
                    "description",
                    "price",
                    "image"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number"
                    },
                    "image": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "ResendOtpRequest": {
                "title": "Resend OTP Request",
                "description": "Request data for resending OTP",
                "required": [
                    "phone_number"
                ],
                "properties": {
                    "phone_number": {
                        "type": "string"
                    }
                },
                "type": "object"
            }
        },
        "parameters": {
            "acceptJson": {
                "name": "Accept",
                "in": "header",
                "required": false,
                "schema": {
                    "type": "string",
                    "default": "application/json"
                }
            }
        }
    },
    "tags": [
        {
            "name": "Mobile App",
            "description": "Mobile App"
        },
        {
            "name": "Auth",
            "description": "Auth"
        }
    ]
}